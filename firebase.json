{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0"
          }
        ]
      },
      {
        "source": "/robots.txt",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0"
          }
        ]
      },
      {
        "source": "/favicon.ico",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0"
          }
        ]
      },
      {
        "source": "/favicon.png",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/create-menu",
        "destination": "/index.html"
      },
      {
        "source": "/split-bill",
        "destination": "/index.html"
      },
      {
        "source": "/results",
        "destination": "/index.html"
      },
      {
        "source": "/edit-menu/**",
        "destination": "/index.html"
      },
      {
        "source": "/split/**",
        "destination": "/index.html"
      },
      {
        "source": "/adjust-split/**",
        "destination": "/index.html"
      },
      {
        "source": "/my-splits",
        "destination": "/index.html"
      },
      {
        "source": "/privacy",
        "destination": "/index.html"
      },
      {
        "source": "/view-split/**",
        "destination": "/index.html"
      }
    ]
  }
}
